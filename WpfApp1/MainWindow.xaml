<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="Справочники" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="📚 Справочники">
                <MenuItem Header="Адреса" Click="OnAddressesClick"/>
                <MenuItem Header="Организации" Click="OnOrganizationsClick"/>
                <MenuItem Header="Юридические лица" Click="OnLegalEntitiesClick"/>
                <MenuItem Header="Физические лица" Click="OnPhysicalPersonsClick"/>
                <MenuItem Header="Индивидуальные предприниматели" Click="OnIndividualEntrepreneursClick"/>
            </MenuItem>
        </Menu>
        <ContentControl x:Name="MainContent"/>
    </DockPanel>
</Window>
